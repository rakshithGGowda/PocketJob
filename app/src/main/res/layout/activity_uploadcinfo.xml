<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadcinfo">

    <AbsoluteLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="0dp"
        android:layout_y="25dp">

        <Button
            android:id="@+id/uploadimg"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_x="198dp"
            android:layout_y="13dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="upload Images"
            android:textColor="#fff" />

        <Button
            android:id="@+id/upload"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_x="119dp"
            android:layout_y="451dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Send Request"
            android:textColor="#fff" />

        <Button
            android:id="@+id/chooseimg"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_x="27dp"
            android:layout_y="12dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Choose Images"
            android:textColor="#fff" />

        <ImageButton
            android:id="@+id/img4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_x="256dp"
            android:layout_y="307dp"
            app:srcCompat="@drawable/common_full_open_on_phone"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="271dp" />

        <ImageButton
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_x="141dp"
            android:layout_y="305dp"
            app:srcCompat="@drawable/common_full_open_on_phone"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="271dp" />

        <ImageButton
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_x="25dp"
            android:layout_y="306dp"
            app:srcCompat="@drawable/common_full_open_on_phone"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="271dp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="155dp"
            android:layout_y="413dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="422dp" />

    </AbsoluteLayout>


    <ImageView
        android:id="@+id/txtimg"
        android:layout_width="341dp"
        android:layout_height="157dp"
        android:layout_below="@+id/layout"
        android:layout_x="18dp"
        android:layout_y="120dp"
        android:src="@drawable/noimg" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="177dp"
        android:layout_y="266dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="248dp" />
</AbsoluteLayout>